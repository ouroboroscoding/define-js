{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": "src",
		"declaration": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"lib": ["es2017"],
		"moduleResolution": "node",
		"noEmit": false,
		"outDir": "build",
		"strict": true,
		"target": "esnext"
	},
	"include": ["./src"],
	"exclude": [
		"babel.config.cjs",
		"documentation/*",
		"jest.config.ts",
		"tests/*"
	],
	"typedocOptions": {
		"entryPoints": [ "src/index.ts" ],
		"out": "documentation/html"
	}
}